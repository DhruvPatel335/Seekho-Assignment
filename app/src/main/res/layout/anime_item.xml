<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivAnimePoster"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@color/cardview_dark_background"
        android:contentDescription="@string/anime_poster"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintTop_toBottomOf="@+id/ivAnimePoster"
        android:layout_margin="15dp"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvEpisodeHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No. of episodes:"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/tvTitle"
        app:layout_constraintHorizontal_bias="0"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tvTotalEpisodes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintTop_toBottomOf="@+id/ivAnimePoster"
        android:textSize="16sp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/tvEpisodeHeader"
        app:layout_constraintTop_toTopOf="@id/tvEpisodeHeader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0" />

    <TextView
        android:id="@+id/tvRatingsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ratings"
        app:layout_constraintTop_toBottomOf="@+id/tvEpisodeHeader"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/tvTitle"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0" />
    <TextView
        android:id="@+id/tvRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintTop_toBottomOf="@+id/ivAnimePoster"
        android:textSize="16sp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/tvRatingsHeader"
        app:layout_constraintTop_toTopOf="@id/tvRatingsHeader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0" />
</androidx.constraintlayout.widget.ConstraintLayout>